<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:orientation="vertical"
    tools:context=".LauncerActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="280dp">

        <Button
            android:id="@+id/btn_jajanan1"
            android:layout_width="205dp"
            android:layout_height="70dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:onClick="pindah1"
            android:text="Jajanan Indonesia" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btn_jajanan2"
            android:layout_width="205dp"
            android:layout_height="70dp"
            android:background="@color/teal_200"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:onClick="pindah2"
            android:text="Jajanan Luar Negri" />
    </LinearLayout>



</LinearLayout>