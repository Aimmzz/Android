<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="3"
    android:background="#FFFAF0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/sekolahku2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lihatbtn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton1"
            android:text="Lihat Data"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton1"
            android:src="@drawable/ic_baseline_archive_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/inputbtn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton2"
            android:text="Input data"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton2"
            android:src="@drawable/ic_baseline_add_box_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/infobtn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton3"
            android:text="informasi"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/stylebutton3"
            android:src="@drawable/ic_baseline_info_24" />
    </LinearLayout>

</LinearLayout>